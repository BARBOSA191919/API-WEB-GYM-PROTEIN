# Editor configuration, see https://editorconfig.org
root = true

[*] # Todos los archivos
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.ts] # Archivos TypeScript
quote_type = single

[*.md] # Archivos Markdown
max_line_length = off
trim_trailing_whitespace = false
